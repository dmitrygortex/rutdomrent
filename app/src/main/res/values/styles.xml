<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationBar">
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

	<!-- home styles -->
    <style name="DescribeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/inter_extralight</item>
    </style>

    <style name="BaseInputEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">@color/blue4</item>
    </style>


    <style name="CalenderViewDateCustomText" parent="android:Widget.CalendarView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:weekNumberColor">@color/white</item>
        <item name="android:yearListSelectorColor">@color/white</item>



    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:headerYearTextAppearance">@color/white</item>


    </style>

    <style name="DividerVertical">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Divider.Horizontal" parent="DividerVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>